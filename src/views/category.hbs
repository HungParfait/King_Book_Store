<p data-bs-toggle="collapse" data-bs-target="#filter"
    class="text-end py-2 adcent-color bg-white sticky-top d-block d-md-none" style="z-index:200" aria-controls="filter"
    aria-expanded="false" aria-label="Toggle navigation">
    <span class="adcent-border-color adcent-shadow py-2 px-3">
        <span>Filters</span>
        <i class="ms-3 fas fa-angle-down color-change"></i>
    </span>
</p>

<div class="d-block d-md-none" style="z-index: 201;">
    <div class="filter p-sm-3 position-fixed top-50 col-sm-12 home-bg-color px-5 collapse" id="filter"
        style="font-size: 13px;transform: translateY(-40%);">
        <form action="/filter" method="post" class="p-3 mx-sm-2 mx-md-3">
            <div class="gia-tien row">
                <h6 class='fw-bolder'>Giá</h6>
                <div class="form-check col-6">
                    <input class="form-check-input" type="radio" name="price" id="flexRadioDefault1">
                    <label class="form-check-label ms-1" for="flexRadioDefault1">
                        0 - 10
                    </label>
                </div>
                <div class="form-check col-6">
                    <input class="form-check-input" type="radio" name="price" id="flexRadioDefault2" checked>
                    <label class="form-check-label ms-1" for="flexRadioDefault2">
                        10 - 20
                    </label>
                </div>
                <div class="form-check col-6">
                    <input class="form-check-input" type="radio" name="price" id="flexRadioDefault3">
                    <label class="form-check-label ms-1" for="flexRadioDefault3">
                        20 - 30
                    </label>
                </div>
                <div class="form-check col-6">
                    <input class="form-check-input" type="radio" name="price" id="flexRadioDefault4" checked>
                    <label class="form-check-label ms-1" for="flexRadioDefault4">
                        30 - 40
                    </label>
                </div>
                <div class="form-check col-6">
                    <input class="form-check-input" type="radio" name="price" id="flexRadioDefault5">
                    <label class="form-check-label ms-1" for="flexRadioDefault5">
                        40 - 50
                    </label>
                </div>
                <div class="form-check col-6">
                    <input class="form-check-input" type="radio" name="price" id="flexRadioDefault6" checked>
                    <label class="form-check-label ms-1" for="flexRadioDefault6">
                        60 - 70
                    </label>
                </div>
                <div class="form-check col-6">
                    <input class="form-check-input" type="radio" name="price" id="flexRadioDefault7">
                    <label class="form-check-label ms-1" for="flexRadioDefault7">
                        > 70
                    </label>
                </div>
            </div>
            <hr>
            <div class="hinh-thuc row">
                <h6 class='fw-bolder'>Hình thức</h6>
                <div class="form-check col-6">
                    <input class="form-check-input" type="radio" name="format" value='Paperback' id="flexRadioDefault8">
                    <label class="form-check-label ms-1" for="flexRadioDefault8">
                        Bìa Cứng
                    </label>
                </div>
                <div class="form-check col-6">
                    <input class="form-check-input" type="radio" name="format" value='Hardback' id="flexRadioDefault9"
                        checked>
                    <label class="form-check-label ms-1" for="flexRadioDefault9">
                        Bìa Mềm
                    </label>
                </div>
                <div class="form-check col-6">
                    <input class="form-check-input" type="radio" name="format" value='Book' id="flexRadioDefault10">
                    <label class="form-check-label ms-1" for="flexRadioDefault10">
                        Đóng Hộp
                    </label>
                </div>
            </div>
            <hr>
            <div class="ngon-ngu row">
                <h6 class='fw-bolder'>Ngôn ngữ</h6>
                <div class="form-check col-6">
                    <input class="form-check-input" type="radio" name="language" id="flexRadioDefault11" value="en"
                        checked>
                    <label class="form-check-label ms-1" for="flexRadioDefault11">
                        Tiếng Anh
                    </label>
                </div>
                <div class="form-check col-6">
                    <input class="form-check-input" type="radio" name="language" id="flexRadioDefault12" value="vi">
                    <label class="form-check-label ms-1" for="flexRadioDefault12">
                        Tiếng Việt
                    </label>
                </div>
            </div>
            <hr>
            <button type="submit" class="btn adcent-bg-color text-white mt-2 ">
                <span class="mx-4">
                    Lọc
                </span>
                <i class="fas fa-chevron-right ms-2"></i>
            </button>
        </form>
    </div>
</div>

